    <div class="col-xs-3">
        <div class="panel panel-default">
          <div class="panel-image hide-panel-body">
            <img src="/banner.jpg" class="panel-image-preview"></img>
          </div>
          <div class="panel-footer text-center">
            <div class="row">
              <div class="col-sm-2">
                <img src="/default.png" height="50px" width="50px" class="rounded-img"></img>
              </div>
              <div class="col-sm-10">
                <h4>Username</h4>
              </div>
              <div class="col-sm-12" style="margin-top:10px;">
                <div class="col-sm-6" style="font-size: 80%; opacity: .7;">TWEETS<br>
                  <h6 style="color: #286090; font-size: 200%">17</h6>
                </div>
                <div class="col-sm-6" style="font-size: 80%; opacity: .7;">FOLLOWERS<br>
                  <h6 style="color: #286090; font-size: 200%">32</h6>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="panel panel-default">
            <div class="panel-body">
                <h5 style="color: grey; font-size: 125%;">Trends</h5>
                <a href="#">#Trend1</a><br>
